<PropertyList>
    <meta>
        <file-type type="string">FlightGear add-on menu bar items</file-type>
        <format-version type="int">1</format-version>
    </meta>
    <menubar-items>
        <menu>
            <label>Which Runway</label>
            <enabled type="bool">true</enabled>

            <item>
                <label>Runways...</label>
                <name>which-runway-addon-main</name>
                <binding>
                    <command>nasal</command>
                    <script>whichRunwayAddon.g_WhichRwyDialog.show();</script>
                </binding>
            </item>
            <item>
                <label>----------</label>
                <enabled type="bool">false</enabled>
            </item>
            <item>
                <label>Settings...</label>
                <name>which-runway-addon-settings</name>
                <binding>
                    <command>nasal</command>
                    <script>whichRunwayAddon.g_SettingsDialog.show();</script>
                </binding>
            </item>
            <item>
                <label>About...</label>
                <name>which-runway-addon-about</name>
                <binding>
                    <command>nasal</command>
                    <script>whichRunwayAddon.g_AboutDialog.show();</script>
                </binding>
            </item>
        </menu>
    </menubar-items>
</PropertyList>
