<PropertyList>
    <addons>
        <by-id>
            <org.flightgear.addons.which-runway>
                <settings>
                    <!-- Maximum search range of the nearest airport with METAR. -->
                    <max-metar-range-nm type="double" userarchive="y">30</max-metar-range-nm>

                    <!-- Scroll by keyboard -->
                    <keys>
                        <arrow-move-size type="int">20</arrow-move-size>
                    </keys>

                    <!-- Options for using rwyuse.xml files. -->
                    <rwyuse>
                        <!-- Set to false to completely disable the use of rwyuse.xml files. -->
                        <enabled type="bool" userarchive="y">true</enabled>

                        <!-- Default aircraft type, it can be: "com", "gen", "mil", "ul" -->
                        <aircraft-type type="string">com</aircraft-type>
                    </rwyuse>
                </settings>

                <!-- We need ../metar/data here for setlistener to work because we are observing these properties.-->
                <tab-nearest>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-nearest>
                <tab-departure>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-departure>
                <tab-arrival>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-arrival>
                <tab-alternate>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-alternate>
            </org.flightgear.addons.which-runway>
        </by-id>
    </addons>
</PropertyList>
