<PropertyList>
    <addons>
        <by-id>
            <org.flightgear.addons.which-runway>
                <settings>
                    <!-- Maximum search range of the nearest airport with METAR. -->
                    <max-metar-range-nm type="double">30</max-metar-range-nm>
                </settings>

                <!-- We need ../metar/data here for setlistener to work because we are observing these properties.-->
                <tab-nearest>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-nearest>
                <tab-departure>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-departure>
                <tab-arrival>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-arrival>
                <tab-alternate>
                    <metar>
                        <data type="string"></data>
                    </metar>
                </tab-alternate>
            </org.flightgear.addons.which-runway>
        </by-id>
    </addons>
    <input>
        <keyboard>
            <multikey>
                <key n="89">
                    <name>Y</name>
                    <!-- <desc>Development functions</desc> -->

                    <key n="97">
                        <name>a</name>
                        <desc>Addon</desc>

                        <key n="119">
                            <name>w</name>
                            <desc>Reload "Which Runway" Addon</desc>
                            <exit/>
                            <binding>
                                <command>nasal</command>
                                <script><![CDATA[
                                    fgcommand("addon-reload", props.Node.new({
                                        id: whichRunway.g_Addon.id,
                                    }));
                                ]]></script>
                            </binding>
                        </key>
                    </key>
                </key>
            </multikey>
        </keyboard>
    </input>
</PropertyList>
